<div class="message mb-2">
  <div class="content-container">
    <div class="content">
      <%= message.content %>
    </div>
    <div class="author">
      <%= message.user.username %>
    </div>
    <% if message.image.attached? %>
      <%=image_tag(message.image,style:"width:30px;height:30px")%>
    <% end %>
  </div>

</div>